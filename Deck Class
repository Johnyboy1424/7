package sevenWonders;

import java.io.*;
import java.util.*;
import java.util.*;
public class Deck 
{
	private ArrayList<Cards> discard;
	private ArrayList<Cards> playerDecks;
	
	private Map<Integer, ArrayList<Cards>> decks;
	
	public Deck() throws IOException
	{
		Scanner keyboard = new Scanner(new File("SevenWondersInput.txt"));
		playerDecks = new ArrayList<Cards>();
		String[] info = new String[8];
		for(int x = 0;x<39;x++)
		{
			//String age, String function, String name, String cost, String free, String freeChain, String color, String scope
			String one = keyboard.nextLine();
			info = one.split("/");
			String age = info[0];
			String function = info[1];
			String name = info[2];
			String cost = info[3];
			String free = info[4];
			String freeChain = info[5];
			String color = info[6];
			String scope = info[7];
			Cards temp = new Cards(age, function, name, cost, free, freeChain, color, scope);
			playerDecks.add(temp);
		}
	}
	
	public ArrayList<Cards> getAge(int age)
	{
		discard.clear();
		for(Card c : playerDecks)
		{
			if(c.getAge() == age)
				discard.add(c);
		}
		return discard;
	}
	
	public Cards getCard(int x)
	{
		return playerDecks.get(x);
	}
}
