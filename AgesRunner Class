import java.awt.Dimension;
import java.awt.Insets;
import java.awt.event.MouseEvent;
import java.awt.event.MouseListener;
import java.io.IOException;
import java.util.ArrayList;
import java.util.Scanner;

import javax.swing.JFrame;

import java.io.*;
import java.util.*;

public class AgesRunner extends JFrame implements MouseListener
{
	private boolean gameOver;
	private Graphics graphics;
	private Ages agesObj;
	
	public void main()
	{
		AgesRunner testGame = new AgesRunner();
	}
	
	public AgesRunner()
	{
		Insets framing = getInsets();
		
		int width = graphics.getWidth() + (framing.left + framing.right);
		
		int length = graphics.getHeight() + (framing.top + framing.bottom);
		
		setPreferredSize(new Dimension(width, length));
		setLayout(null);
		add(graphics);
		pack();
		setVisible(true);
		addMouseListener(this);
		
		gameOver = false;
		
		play();
	}
	
	public void play()
	{
		ages.set();
		graphics.gameStateStatus(ages.getGameState());
	}
	
	public void pickThings()
	{
		ages.switchTurns();
		System.out.println();
		play();
	}
	
	public void playCard(int i)
	{
		ages.playCard(i);
		
		if(ages.checkWin() >= 0)
		{
			gameOver = true;
			victory();
			return;
		}
		
		else if(ages.getCurrentPlayer().determineWin())
		{
			grahics.addMove("Player " + (board.getTurn() + 1) + "VICTORY");//log
		}
		
		turn();
	}
	
	public void drawCard()
	{
		String move = ages.drawnCard();
		
		grpahics.addMove(move);
		
		String playersCard = move.substring(move.lastIndexOf(" ") + 1);
		
		turn();
	}
	
	public void victory()
	{
		graphics.setWin();
		graphics.repaint();
		
		System.out.println("Player " + (ages.checkWin()+1) + "has won the game");
	}
	
	@Override
	
	public void mouseClicked(MouseEvent e)
	{
		
	}
	
	@Override
	
	public void mousePressed(MouseEvent e)
	{
		
	}
	
	@Override
	
	public void mouseEntered(MouseEvent e)
	{
		
	}
	
	public void mouseReleased(MouseEvent e)
	{
		int xBoundary = e.getX();
		int yBoundary = e.getY();
		
	}

	@Override
	
	public void mouseExited(MouseEvent e) 
	{
			
	}
}
