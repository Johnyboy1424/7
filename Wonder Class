public class Wonder 
{
	private String name;
	private int stagesActivated;
	private String function;
	private String version;
	
	public Wonder(String name, String resource, String firstFunction, String cost1, String secondFunction, String cost2, String thirdFunction, String cost3)
	{
		this.name = name;
		stagesActivated = 0;
		function = "";
	}
	
	//activates the next stage of the wonder
	public void actvNxtStg()
	{
		stagesActivated++;
	}
	
}

