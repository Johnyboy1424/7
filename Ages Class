import java.io.IOException;
import java.util.ArrayList;

public class Ages 
{
	private int age;
	private Boolean reversed;
	private int round;
	private int turn;
	private Deck deck;
	private ArrayList<Player> players;
	private ArrayList<Card> ageDeck;
	private static ArrayList<Object> gameState;
	private ArrayList<ArrayList<Cards>> visibleArray;
	
	  public Ages() throws IOException
	  {
	    age = 0;
	    round = 0;
	    turn = 0;
	    reversed = true;
	    deck = new Deck();
	    players = new ArrayList<>();
	  }
	  
	  public void switchTurns()
	  {
	  if(!reversed)
	 	 {
	  	if(turn = 2)
			turn = 0;
		else
			turn++;
		}
	  else
	  {
		if(turn = 0)
			turn = 3;
		else
			turn--;
	  }
	  }
	  
	  public void switchRounds()
	  {
	  	
	  public String checkWin()
	  {
	  	int x = players.get(0).getScore();
	    String p = players.get(0).getName();
	    for(int counter = 0; counter < players.size() - 1; counter++)
		{
		  if(players.get(counter + 1).getScore() > x)
		  {
	        x = players.get(counter + 1).getScore();
	        p = players.get(x).getName();
		  }
		}	    
	    return p;
	  }
	  
	  public void nextAge()
	  {
		 age++;
		 ageDeck = deck.getAge(age);
		 Collections.shuffle(ageDeck);
		 for(Player p : players)
		 {
		 	for(int i = 0; i < 7 i++)
			{
				p.addToHand(ageDeck.remove(0));
			}
		}
	  	 reversed = !reversed;
	}
	  public void drawnCard()
	  {
	  	
	  }
	  
	  public Player getCurrentPlayer()
	  {
		  return players.get(turn);
	  }
	  
	  public static ArrayList<Object> getGameState()
	  {
		  return gameState;
	  }

	public static void set() 
	{
		// TODO Auto-generated method stub
		
	}
 }
