import java.util.ArrayList;

public class Ages 
{
	private int age;
  private int round;
  private Deck deck;
  private ArrayList<Player> players;
  private ArrayList<Objects> gameState;
  private ArrayList<ArrayList<Cards>> visibleArray;
	
  public Ages()
	{
		age = 0;
    round = 0;
    deck = new Deck();
    players = new ArrayList<>
	}
  
  public void switchTurns()
	{
  
  }
  
  public String checkWin()
	{
  	int x = players.get(0).getScore();
    String p = players.get(0).getName();
    for(int counter = 0; counter < players.size() - 1; counter++)
	  {
	  	if(players.get(counter + 1).getScore() > x)
	    {
        x = players.get(counter + 1).getScore();
        p = players.get(x).getName();
	    }
	  }	    
    return p;
	}
  
  public void drawnCard()
	{
  	
  }
  
  public Player getCurrentPlayer()
	{
  	for(int i = 0; i < 7; i++)
		{
  		for(int k = 0; i < 3; i++)
      {
      	return players.get(i);
      }
  	}
  }
  
}
